<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/message_single_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:padding="10dp">



        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/message_single_profile"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_weight="0"
            android:src="@drawable/default_avatar" />

    <TextView
        android:id="@+id/message_Display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/message_single_profile"
        android:padding="0dp"
        android:text="Display Name"
        android:textColor="#444444"
        android:textSize="14sp"
        android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/time_text_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@id/message_Display_name"
            android:layout_alignParentTop="true"
            android:padding="0dp"
            android:text="00:00"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

    <TextView
        android:id="@+id/message_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/message_Display_name"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/message_single_profile"
        android:padding="0dp"
        android:text="Message Text" />

    <ImageView
        android:id="@+id/message_image_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="false"
        android:layout_alignStart="@+id/message_text_layout"
        android:layout_below="@+id/message_text_layout"
        android:layout_marginStart="0dp"
        android:layout_toEndOf="@+id/message_single_profile"
        android:padding="0dp"
        android:scaleType="centerCrop" />




</RelativeLayout>